<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AddCompany"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="0.3"
            android:background="@color/gray"
            >
            <ImageView
                android:id="@+id/companyLogoAC"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_person_black_24dp"
                />
            <ImageView
                android:id="@+id/pick_image_AC"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_person_black_24dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="8dp"
                />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.7"
            >

            <EditText
                android:id="@+id/companyNameAC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Name"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/ic_home_black_24dp"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:drawablePadding="8dp"
                android:paddingBottom="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textColorHint="@color/app_color"
                />

            <EditText
                android:id="@+id/rcAC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="RC"
                android:drawableLeft="@drawable/ic_home_black_24dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:drawablePadding="8dp"
                android:paddingBottom="15dp"
                android:textColorHint="@color/app_color"
                />
            <EditText
                android:id="@+id/categoryAC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Category"
                android:drawableLeft="@drawable/ic_home_black_24dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:drawablePadding="8dp"
                android:paddingBottom="15dp"
                android:textColorHint="@color/app_color"
                />

            <EditText
                android:id="@+id/emailAddressAC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:drawableLeft="@drawable/ic_home_black_24dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:drawablePadding="8dp"
                android:paddingBottom="15dp"
                android:textColorHint="@color/app_color"
                />
            <EditText
                android:id="@+id/caAC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Address"
                android:drawableLeft="@drawable/ic_home_black_24dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:drawablePadding="8dp"
                android:paddingBottom="15dp"
                android:textColorHint="@color/app_color"
                />
            <EditText
                android:id="@+id/pnAC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone number"
                android:drawableLeft="@drawable/ic_home_black_24dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:drawablePadding="8dp"
                android:paddingBottom="15dp"
                android:textColorHint="@color/app_color"
                />
            <TextView
                android:id="@+id/addNumAC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click to add from phone book"
                android:layout_gravity="end"
                android:textColor="@color/app_color"
                android:layout_marginTop="8dp"
                android:padding="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:text="Brief Description"
                android:textSize="18sp"
                android:textColor="@color/app_color"
                android:gravity="start"
                android:padding="2dp"
                android:layout_marginTop="5dp"
                />
            <EditText
                android:id="@+id/addDescriptionAC"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/rounded_edit_text"
                android:gravity="start"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:hint="Let us know you" />

            <Button
                android:id="@+id/uploadBtnAC"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:textColor="#070707"
                android:background="@drawable/reg_btn_bg"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="70dp"
                />


        </LinearLayout>
    </LinearLayout>
</ScrollView>